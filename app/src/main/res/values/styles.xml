<resources>

    <style name="TextAppearance.ChefBook.Header" parent="Theme.ChefBook">
        <item name="fontFamily">@font/comfortaa_bold</item>
        <item name="android:textColor">@color/monochrome_invert</item>
    </style>

    <style name="TextAppearance.ChefBook.Header.1">
        <item name="android:textSize">34sp</item>
    </style>

    <style name="TextAppearance.ChefBook.Header.2">
        <item name="android:textSize">32sp</item>
        <item name="fontFamily">@font/comfortaa_semibold</item>
    </style>

    <style name="TextAppearance.ChefBook.Header.3">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/comfortaa_semibold</item>
    </style>

    <style name="TextAppearance.ChefBook.Header.4">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/monochrome_invert</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="RecipeCardCover">
        <item name="cornerSize">12dp</item>
        <item name="cornerFamily">rounded</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>