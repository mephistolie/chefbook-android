<!--                android:layout_gravity="center"-->
<!--                android:text="23434"/>-->

<!--        </androidx.cardview.widget.CardView>-->

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/text_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:ellipsize="none"
        android:fadingEdgeLength="64dp"
        android:requiresFadingEdge="horizontal"
        android:singleLine="true"
        android:gravity="center"
        tools:text="@string/recipes"
        style="@style/TextAppearance.ChefBook.Header.4"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/cv_cover"
        app:layout_constraintStart_toStartOf="@+id/cv_cover"
        app:layout_constraintBottom_toBottomOf="@+id/cv_cover" />

</androidx.constraintlayout.widget.ConstraintLayout>