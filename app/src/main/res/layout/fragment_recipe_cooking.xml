<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:requiresFadingEdge="vertical"
    android:scrollbars="none"
    android:animateLayoutChanges="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:fontFamily="@font/comfortaa_semibold"
            android:text="@string/cooking"
            android:textColor="@color/monochrome_invert"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/_15_min"
            android:textColor="@color/navigation_foreground"
            android:textSize="24sp"
            android:layout_marginBottom="36dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cooking_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/list_steps"
            tools:itemCount="2"
            android:nestedScrollingEnabled="false"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>